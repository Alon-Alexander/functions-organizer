{
  "extends": [
    "tslint:recommended",
    "tslint:config-standard",
    "airbnb",
  ],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [
      true,
      "always"
    ],
    "ordered-imports": true,
    "object-literal-sort-keys": true,
    "prefer-template": true,
    "no-empty": true,
    "no-var-keyword": true,
    "no-bitwise": true,
    "triple-equals": true,
    "trailing-comma": true,
    "indent": [
      true,
      "spaces",
      4,
    ],
    "eofline": true,
  },
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "src/test/data/**/*.*",
    ]
  }
}