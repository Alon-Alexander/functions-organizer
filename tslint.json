{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "src/test/data/**/*.*"
    ]
  },
  "rules": {
    "class-name": true,
    "curly": true,
    "eofline": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "max-line-length": {
      "options": {
        "limit": 100
      }
    },
    "no-bitwise": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-require-imports": true,
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": true,
    "ordered-imports": true,
    "prefer-const": true,
    "prefer-for-of": false,
    "prefer-template": true,
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": true,
    "triple-equals": true,
    "variable-name": {
      "options": "allow-leading-underscore"
    }
  }
}